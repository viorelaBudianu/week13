                            <td><input type="text" name="Franceza_Scris" maxlength="30" /></td>
                            <td><input type="text" name="Franceza_Citit" maxlength="30" /></td>
                        </tr>

                        <tr>
                            <td>3</td>
                            <td>Germana</td>
                            <td><input type="text" name="Germana_Vorbit" maxlength="30" /></td>
                            <td><input type="text" name="Germana_Scris" maxlength="30" /></td>
                            <td><input type="text" name="Germana_Citit" maxlength="30" /></td>
                        </tr>

                        <tr>
                            <td>4</td>
                            <td>Spaniola</td>
                            <td><input type="text" name="Spaniola_Vorbit" maxlength="30" /></td>
                            <td><input type="text" name="Spaniola_Scris" maxlength="30" /></td>
                            <td><input type="text" name="Spaniola_Citit" maxlength="30" /></td>
                        </tr>


                    </table>

                </td>
            </tr>

            <!----- Submit and Reset ------------------------------------------------->
            <tr>
                <td colspan="2" align="center">
                    <button type="submit" value="Submit" onclick="www.google.com">Submit</button>
                    <button type="reset" value="Reset" action=clear>Reset</button>
                </td>
            </tr>
        </table>

    </form>

</body>

